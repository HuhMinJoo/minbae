{{>store/common/store_header}}

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div>
        <h2 class="h2">우리 가게 목록</h2>
    </div>
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <div class="row row-cols-1 row-cols-md-3 g-4">
                {{#storeList}}
                <div class="col">
                    <div class="card h-100">
                        <img src="..." class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{storeName}}</h5>
                            <p class="card-text">
                                <ul>
                                    <li>{{storeTel}}</li>
                                    <li>{{storeCategory}}</li>
                                    <li>{{storeBasicAddr}}</li>
                                    <li>{{storeDetailAddr}}</li>
                                </ul>
                                This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.
                            </p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted"><a href="/owne/storeInfo/{{storeIdx}}">가게 정보 확인하기</a></small>
                            <small class="text-muted"><a href="/owne/manage/{{storeIdx}}">가게 메뉴 관리하기</a></small>
                        </div>
                    </div>
                </div>
                {{/storeList}}
                 <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            플러스 버튼
                            <button onclick="location.href='/owne/createStore'">새로운 가게 등록 하기</button>
                        </div>
                    </div>
                 </div>
        </div>
    </div>
</main>


{{>store/common/store_footer}}