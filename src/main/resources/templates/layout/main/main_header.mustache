    </style>
    <script>
        window.onload = () => {
            let get_login = sessionStorage.getItem("memberData");
            let login = JSON.parse(get_login);
            let userIdx = login?.memberData?.userIdx;   //자체 로그인
            // let user_idx = login?.userIdx;             //카카오 로그인

            if(userIdx != null){
                document.getElementById('loginPage').style.display = 'block';
                document.getElementById('logoutPage').style.display = 'none';
            }

            // if(user_idx != null || userIdx != null){
            //     document.getElementById('loginPage').style.display = 'block';
            //     document.getElementById('logoutPage').style.display = 'none';
            // }
        }
        const logout = () => {
            sessionStorage.clear();
            location.href = "/user/main";
        }
    </script>
</head>
